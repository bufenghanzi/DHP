<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="800dp"
        android:layout_marginLeft="@dimen/activity_bottom_tab_marginTop"
        android:layout_marginRight="@dimen/activity_bottom_tab_marginTop"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginLeft="@dimen/activity_bottom_tab_marginTop"
            android:layout_marginRight="@dimen/activity_bottom_tab_marginTop" >

            <TextView
                android:id="@+id/tv_stopGlueTimePrev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:textColor="#000000"
                android:text="@string/activity_glue_stopGlueTimePrev"
                android:textSize="@dimen/activity_title_textsize_sub" />

            <EditText
                android:id="@+id/et_lineend_stopGlueTimePrev"
                android:layout_width="@dimen/edittext_input_width"
                android:layout_height="@dimen/edittext_input_height"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/edittext_marginLeft"
                android:layout_toRightOf="@id/tv_stopGlueTimePrev"
                android:background="@drawable/task_edittext_bg"
                android:gravity="right|center"
                android:inputType="number"
                android:textColor="#000000"
                android:paddingLeft="@dimen/edittext_paddingLeft"
                android:paddingRight="@dimen/edittext_paddingRight"
                android:textSize="@dimen/activity_glue_edittext_textsize" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="#000000"
                android:layout_toRightOf="@id/et_lineend_stopGlueTimePrev"
                android:text="@string/activity_ms"
                android:textSize="@dimen/activity_title_textsize_sub" />

            <TextView
                android:id="@+id/tv_stopGlueTime_ms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="40dp"
                android:textColor="#000000"
                android:text="@string/activity_ms"
                android:textSize="@dimen/activity_title_textsize_sub" />

            <EditText
                android:id="@+id/et_lineend_stopGlueTime"
                android:layout_width="@dimen/edittext_input_width"
                android:layout_height="@dimen/edittext_input_height"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/edittext_marginLeft"
                android:layout_toLeftOf="@id/tv_stopGlueTime_ms"
                android:background="@drawable/task_edittext_bg"
                android:gravity="right|center"
                android:inputType="number"
                android:textColor="#000000"
                android:paddingLeft="@dimen/edittext_paddingLeft"
                android:paddingRight="@dimen/edittext_paddingRight"
                android:textSize="@dimen/activity_glue_edittext_textsize" />

            <TextView
                android:id="@+id/tv_stopGlueTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="#000000"
                android:layout_toLeftOf="@id/et_lineend_stopGlueTime"
                android:text="@string/activity_glue_stopGlueTime"
                android:textSize="@dimen/activity_title_textsize_sub" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginLeft="@dimen/activity_bottom_tab_marginTop"
            android:layout_marginRight="@dimen/activity_bottom_tab_marginTop" >

            <TextView
                android:id="@+id/tv_upHeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textColor="#000000"
                android:layout_centerInParent="true"
                android:text="@string/activity_glue_alone_upHeight"
                android:textSize="@dimen/activity_title_textsize_sub" />

            <EditText
                android:id="@+id/et_lineend_upHeight"
                android:layout_width="@dimen/edittext_input_width"
                android:layout_height="@dimen/edittext_input_height"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/edittext_marginLeft"
                android:layout_toRightOf="@id/tv_upHeight"
                android:background="@drawable/task_edittext_bg"
                android:gravity="right|center"
                android:inputType="number"
                android:textColor="#000000"
                android:paddingLeft="@dimen/edittext_paddingLeft"
                android:paddingRight="@dimen/edittext_paddingRight"
                android:textSize="@dimen/activity_glue_edittext_textsize" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="#000000"
                android:layout_toRightOf="@id/et_lineend_upHeight"
                android:text="@string/activity_mm"
                android:textSize="@dimen/activity_title_textsize_sub" />

            <TextView
                android:id="@+id/tv_breakGlueLen_ms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="28dp"
                android:textColor="#000000"
                android:text="@string/activity_mm"
                android:textSize="@dimen/activity_title_textsize_sub" />

            <EditText
                android:id="@+id/et_lineend_breakGlueLen"
                android:layout_width="@dimen/edittext_input_width"
                android:layout_height="@dimen/edittext_input_height"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/edittext_marginLeft"
                android:layout_toLeftOf="@id/tv_breakGlueLen_ms"
                android:background="@drawable/task_edittext_bg"
                android:gravity="right|center"
                android:textColor="#000000"
                android:inputType="number"
                android:paddingLeft="@dimen/edittext_paddingLeft"
                android:paddingRight="@dimen/edittext_paddingRight"
                android:textSize="@dimen/activity_glue_edittext_textsize" />

            <TextView
                android:id="@+id/tv_breakGlueLen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_centerInParent="true"
                android:layout_toLeftOf="@id/et_lineend_breakGlueLen"
                android:text="@string/activity_glue_breakGlueLen"
                android:textSize="@dimen/activity_title_textsize_sub" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginLeft="@dimen/activity_bottom_tab_marginTop"
            android:layout_marginRight="@dimen/activity_bottom_tab_marginTop" >

            <TextView
                android:id="@+id/tv_drawDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:text="@string/activity_glue_drawDistance"
                android:textSize="@dimen/activity_title_textsize_sub" />

            <EditText
                android:id="@+id/et_lineend_drawDistance"
                android:layout_width="@dimen/edittext_input_width"
                android:layout_height="@dimen/edittext_input_height"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/edittext_marginLeft"
                android:layout_toRightOf="@id/tv_drawDistance"
                android:background="@drawable/task_edittext_bg"
                android:gravity="right|center"
                android:textColor="#000000"
                android:inputType="number"
                android:paddingLeft="@dimen/edittext_paddingLeft"
                android:paddingRight="@dimen/edittext_paddingRight"
                android:textSize="@dimen/activity_glue_edittext_textsize" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="#000000"
                android:layout_toRightOf="@id/et_lineend_drawDistance"
                android:text="@string/activity_mm"
                android:textSize="@dimen/activity_title_textsize_sub" />

            <TextView
                android:id="@+id/tv_drawSpeed_mm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:textColor="#000000"
                android:text="@string/activity_mm_s"
                android:textSize="@dimen/activity_title_textsize_sub" />

            <EditText
                android:id="@+id/et_lineend_drawSpeed"
                android:layout_width="@dimen/edittext_input_width"
                android:layout_height="@dimen/edittext_input_height"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/edittext_marginLeft"
                android:layout_toLeftOf="@id/tv_drawSpeed_mm"
                android:background="@drawable/task_edittext_bg"
                android:gravity="right|center"
                android:textColor="#000000"
                android:inputType="number"
                android:paddingLeft="@dimen/edittext_paddingLeft"
                android:paddingRight="@dimen/edittext_paddingRight"
                android:textSize="@dimen/activity_glue_edittext_textsize" />

            <TextView
                android:id="@+id/tv_drawSpeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="#000000"
                android:layout_toLeftOf="@id/et_lineend_drawSpeed"
                android:text="@string/activity_glue_drawSpeed"
                android:textSize="@dimen/activity_title_textsize_sub" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="@dimen/activity_bottom_tab_marginTop"
            android:layout_marginRight="@dimen/activity_bottom_tab_marginTop"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textColor="#000000"
                    android:text="@string/activity_glue_alone_isPause"
                    android:textSize="@dimen/activity_title_textsize_sub" />

                <ToggleButton
                    android:id="@+id/switch_isPause"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:button="@drawable/checkbox_iphone"
                    android:checked="false" />
                <!--
                     <Switch
                    android:id="@+id/switch_isPause"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:checked="false"
                    android:textOff="@string/activity_no"
                    android:textOn="@string/activity_yes"
                    android:thumbTextPadding="30dp" />
                -->
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/activity_bottom_tab_marginTop"
        android:layout_marginRight="@dimen/activity_bottom_tab_marginTop"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_moren"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/task_bottom_imagebutton"
            android:gravity="center" >

            <ImageView
                android:id="@+id/iv_moren"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_playlist_add_check_white_48dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv_moren"
                android:layout_toRightOf="@id/iv_moren"
                android:gravity="center"
                android:text="@string/activity_glue_default"
                android:textColor="@color/color_white"
                android:textSize="@dimen/activity_task_bottom_text_size" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_save"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/activity_bottom_tab_marginBottom"
            android:layout_marginLeft="@dimen/activity_bottom_tab_marginLeft"
            android:layout_marginRight="@dimen/activity_bottom_tab_marginRight"
            android:layout_marginTop="@dimen/activity_bottom_tab_marginTop"
            android:layout_weight="1"
            android:background="@drawable/task_bottom_imagebutton"
            android:gravity="center" >

            <ImageView
                android:id="@+id/iv_save"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="centerInside"
                android:src="@drawable/save" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv_save"
                android:layout_toRightOf="@id/iv_save"
                android:gravity="center"
                android:text="@string/activity_glue_save"
                android:textColor="@color/color_white"
                android:textSize="@dimen/activity_task_bottom_text_size" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>