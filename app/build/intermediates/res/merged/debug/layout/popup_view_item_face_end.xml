<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/title_num"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:paddingLeft="10dp" />

    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:layout_marginLeft="@dimen/activity_bottom_tab_marginTop"
        android:layout_marginRight="@dimen/activity_bottom_tab_marginTop"
        android:layout_toRightOf="@id/title_num"
        android:background="@drawable/popup_view_item_bg"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/activity_bottom_tab_marginTop"
            android:layout_marginRight="@dimen/activity_bottom_tab_marginTop" >

            <TextView
                android:id="@+id/title_stopGlueTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textColor="#000000"
                android:textSize="@dimen/activity_title_item_mid_textsize" />

            <TextView
                android:id="@+id/title_et_stopGlueTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/title_stopGlueTime"
                android:textColor="#000000"
                android:textSize="@dimen/activity_title_item_mid_textsize" />

            <TextView
                android:id="@+id/activity_ms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/title_et_stopGlueTime"
                android:textColor="#000000"
                android:textSize="@dimen/activity_title_item_mid_textsize" />

            <TextView
                android:id="@+id/activity_fenghao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/activity_ms"
                android:textColor="#000000"
                android:textSize="@dimen/activity_title_item_mid_textsize" />

            <TextView
                android:id="@+id/title_activity_glue_alone_upHeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/activity_fenghao"
                android:textColor="#000000"
                android:textSize="@dimen/activity_title_item_mid_textsize" />

            <TextView
                android:id="@+id/title_et_activity_glue_alone_upHeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/title_activity_glue_alone_upHeight"
                android:textColor="#000000"
                android:textSize="@dimen/activity_title_item_mid_textsize" />

            <TextView
                android:id="@+id/title_upheight_mm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/title_et_activity_glue_alone_upHeight"
                android:textColor="#000000"
                android:textSize="@dimen/activity_title_item_mid_textsize" />

            <TextView
                android:id="@+id/activity_second_fenghao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/title_upheight_mm"
                android:textColor="#000000"
                android:textSize="@dimen/activity_title_item_mid_textsize" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/activity_bottom_tab_marginTop"
            android:layout_marginRight="@dimen/activity_bottom_tab_marginTop" >

            <TextView
                android:id="@+id/title_lineNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textColor="#000000"
                android:textSize="@dimen/activity_title_item_mid_textsize" />

            <TextView
                android:id="@+id/title_et_lineNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/title_lineNum"
                android:textColor="#000000"
                android:textSize="@dimen/activity_title_item_mid_textsize" />

            <TextView
                android:id="@+id/activity_four_fenghao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/title_et_lineNum"
                android:textColor="#000000"
                android:textSize="@dimen/activity_title_item_mid_textsize" />

            <TextView
                android:id="@+id/title_activity_glue_alone_isPause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/activity_four_fenghao"
                android:textColor="#000000"
                android:textSize="@dimen/activity_title_item_mid_textsize" />

            <TextView
                android:id="@+id/title_et_activity_glue_alone_isPause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/title_activity_glue_alone_isPause"
                android:textColor="#000000"
                android:textSize="@dimen/activity_title_item_mid_textsize" />

        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/ll_title"
        android:layout_alignTop="@+id/ll_title"
        android:layout_marginRight="24dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/ok"
        android:visibility="gone" />

</RelativeLayout>